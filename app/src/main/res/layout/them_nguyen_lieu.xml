<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bogoc_selector"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_layout"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Thêm Nguyên Liệu"
        android:textColor="#FFF"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/edtTenNL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bogoc_selector"
        android:hint="Tên nguyên liệu" />
    <EditText
        android:id="@+id/edtSoLuong"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bogoc_selector"
        android:hint="Số lượng" />
    <EditText
        android:id="@+id/edtGiaNhap"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bogoc_selector"
        android:hint="Giá nhập" />
    <EditText
        android:id="@+id/edtDonVi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bogoc_selector"
        android:hint="Đơn vị" />
    <EditText
        android:id="@+id/edtNoiBQ"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bogoc_selector"
        android:hint="Nơi bảo quản" />
    <Button
        android:id="@+id/btnThemNL"
        android:text="Thêm"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="28dp"
        android:textAllCaps="false"
        android:background="@drawable/item_thucdon_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
