<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="12"
    android:background="@drawable/item_thucdon_selector"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTenMonDaChon"
        android:text="cá chép om dưa"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_weight="4"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:id="@+id/tvSoLuongDaChon"
        android:text="Số lượng: 3"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/imgCongMon"
        android:clickable="true"
        android:visibility="gone"
        android:layout_weight="1"
        android:src="@drawable/ic_them"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/imgTruMon"
        android:visibility="gone"
        android:clickable="true"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:src="@drawable/ic_xoa"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>
