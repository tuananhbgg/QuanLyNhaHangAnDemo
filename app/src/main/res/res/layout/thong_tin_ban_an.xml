<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Thông Tin Bàn Ăn"
        android:textColor="#FFF"
        android:textSize="28sp" />
    <TextView
    android:id="@+id/tvTTSoBan"
    android:layout_width="match_parent"
    android:textColor="#000"
    android:gravity="center_vertical"
    android:text="bàn số 1"
    android:textSize="22sp"
    android:layout_height="48dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/view_nhaplieu_selector" />
    <TextView
        android:id="@+id/tvTTViTri"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="Tầng 1"
        android:textSize="22sp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/view_nhaplieu_selector" />
    <TextView
        android:id="@+id/tvTTSucChua"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="6"
        android:textSize="22sp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/view_nhaplieu_selector" />
    <TextView
        android:id="@+id/tvTTTrangThai"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="Còn Trống"
        android:textSize="22sp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/view_nhaplieu_selector" />
    <Button
        android:id="@+id/btnDatBan"
        android:text="Đặt Bàn"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/item_thucdon_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
